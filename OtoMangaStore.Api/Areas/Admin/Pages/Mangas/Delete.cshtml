<div class="mb-3">
    <a href="/Admin/Dashboard" class="btn btn-outline-primary">Regresar al Dashboard</a>
    <a asp-page="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>

<div class="card p-3 mb-3">
    <p><strong>Título:</strong> @Model.Manga?.Title</p>
    <p><strong>Categoría:</strong> @Model.Manga?.CategoryName</p>
    <p><strong>Autor:</strong> @Model.Manga?.AuthorName</p>
    <p><strong>Stock:</strong> @Model.Manga?.Stock</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
