@page "{id:int}"
@model OtoMangaStore.Api.Areas.Admin.Pages.Mangas.EditModel
@{
    ViewData["Title"] = "Editar Manga";
}

<h1>Editar Manga</h1>

<div class="mb-3">
    <a href="/Admin/Dashboard" class="btn btn-outline-primary">Regresar al Dashboard</a>
    <a asp-page="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Input.Id" />

    <div class="form-group">
        <label asp-for="Input.Title"></label>
        <input asp-for="Input.Title" class="form-control" required />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Stock"></label>
        <input asp-for="Input.Stock" class="form-control" required />
        <span asp-validation-for="Input.Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Synopsis"></label>
        <textarea asp-for="Input.Synopsis" class="form-control"></textarea>
        <span asp-validation-for="Input.Synopsis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Autor</label>
        <select asp-for="Input.AuthorId" asp-items="Model.AuthorsSelect" class="form-control" required></select>
        <span asp-validation-for="Input.AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Categor√≠a</label>
        <select asp-for="Input.CategoryId" asp-items="Model.CategoriesSelect" class="form-control" required></select>
        <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Imagen (URL)</label>
        <input asp-for="Input.ImageUrl" class="form-control" />
        <div class="mt-2">
            <label>Cambiar imagen</label>
            <input type="file" asp-for="UploadImage" class="form-control" />
        </div>
        <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
