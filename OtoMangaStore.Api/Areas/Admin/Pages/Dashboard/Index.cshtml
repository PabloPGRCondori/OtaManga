@page
@model OtoMangaStore.Api.Areas.Admin.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Dashboard Administrativo</h1>

<div class="mb-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Mangas">Mangas</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Authors">Autores</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Admin/Categories">Categorías</a></li>
                </ul>
            </div>
        </div>
    </nav>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card p-3">
            <h3>Total Mangas</h3>
            <p class="display-4">@Model.TotalMangas</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3">
            <h3>Total Órdenes</h3>
            <p class="display-4">@Model.TotalOrders</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3">
            <h3>Total Clics</h3>
            <p class="display-4">@Model.TotalClicks</p>
        </div>
    </div>
</div>
