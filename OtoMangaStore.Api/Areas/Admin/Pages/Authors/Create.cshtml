@page
@model OtoMangaStore.Api.Areas.Admin.Pages.Authors.CreateModel

<h2>Crear Autor</h2>

<div class="mb-3">
    <a href="/Admin/Dashboard" class="btn btn-outline-primary">Regresar al Dashboard</a>
    <a asp-page="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>

<form method="post" class="card p-4 shadow-sm">

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label asp-for="Input.Name" class="control-label"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Description" class="control-label"></label>
        <textarea asp-for="Input.Description" class="form-control"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
