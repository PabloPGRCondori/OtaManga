@model OtoMangaStore.Api.Areas.Admin.Pages.Authors.IndexModel

<h2>Autores</h2>

<div class="mb-3">
    <a href="/Admin/Dashboard" class="btn btn-outline-primary">Regresar al Dashboard</a>
    <a asp-page="Create" class="btn btn-success ms-2">Crear Autor</a>
    </div>

<table class="table table-striped table-bordered align-middle shadow-sm">
    <thead class="table-dark">
    <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th style="width: 180px;">Acciones</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var a in Model.Authors)
    {
        <tr>
            <td>@a.Name</td>
            <td>@a.Description</td>
            <td>
                <a asp-page="Edit" asp-route-id="@a.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="Delete" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
