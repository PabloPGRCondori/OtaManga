@model OtoMangaStore.Api.Areas.Admin.Pages.Authors.EditModel

<h2>Editar Autor</h2>

<form method="post" class="card p-4 shadow-sm">

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Author.Id" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Author.Name" class="form-control" />
        <span asp-validation-for="Author.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea asp-for="Author.Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>