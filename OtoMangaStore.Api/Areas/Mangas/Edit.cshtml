@page "{id:int}"
@model OtoMangaStore.Api.Areas.Admin.Pages.Mangas.EditModel
@{
    ViewData["Title"] = "Editar Manga";
}

<h1>Editar Manga</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Input.Id" />

    <div class="form-group">
        <label asp-for="Input.Title"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Stock"></label>
        <input asp-for="Input.Stock" class="form-control" />
        <span asp-validation-for="Input.Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Synopsis"></label>
        <textarea asp-for="Input.Synopsis" class="form-control"></textarea>
        <span asp-validation-for="Input.Synopsis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Autor</label>
        <select asp-for="Input.AuthorId" asp-items="Model.AuthorsSelect" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <select asp-for="Input.CategoryId" asp-items="Model.CategoriesSelect" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Imagen (URL)</label>
        <input asp-for="Input.ImageUrl" class="form-control" />
        <div class="mt-2">
            <label>O cambiar imagen</label>
            <input type="file" asp-for="UploadImage" class="form-control" />
        </div>
    </div>

    <div class="form-group form-check">
        <input asp-for="Input.IsActive" class="form-check-input" />
        <label asp-for="Input.IsActive" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

